{
	"info": {
		"_postman_id": "erp-api-collection",
		"name": "零售業 ERP API",
		"description": "零售業簡易 ERP 系統 API Collection\n\n## 使用說明\n1. 先呼叫「登入」API 取得 Token\n2. Token 會自動儲存到環境變數 `accessToken`\n3. 其他 API 會自動帶入 Authorization Header",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8005",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{accessToken}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "認證管理",
			"item": [
				{
					"name": "登入",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success && jsonData.data && jsonData.data.accessToken) {",
									"    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
									"    console.log('Token saved successfully');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "使用帳號密碼登入，成功後回傳 JWT Token"
					}
				},
				{
					"name": "刷新 Token",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/refresh?refreshToken={{refreshToken}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "refresh"],
							"query": [
								{
									"key": "refreshToken",
									"value": "{{refreshToken}}"
								}
							]
						}
					}
				},
				{
					"name": "登出",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/logout",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "logout"]
						}
					}
				},
				{
					"name": "取得密碼政策",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/password-policy",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "password-policy"]
						}
					}
				},
				{
					"name": "修改密碼",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/change-password?userId=1&oldPassword=oldPass&newPassword=newPass",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "change-password"],
							"query": [
								{"key": "userId", "value": "1"},
								{"key": "oldPassword", "value": "oldPass"},
								{"key": "newPassword", "value": "newPass"}
							]
						}
					}
				}
			]
		},
